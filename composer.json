{
  "name": "gtsciences/gt_drupal_kickoff",
  "description": "GT Drupal installer for a more civilized age",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "homepage": "https://cos.gatech.edu/",
  "authors": [
    {
      "name": "Michael Sheldon, ARCS"
    }
  ],
  "support": {
    "email": "web@cos.gatech.edu"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.2",
    "composer/installers": "^2.2",
    "cweagans/composer-patches": "^2.0@beta",
    "drupal/core-composer-scaffold": "^10.2",
    "drupal/core-recommended": "^10.2",
    "deployer/deployer": "^7.3",
    "drush/drush": "^12.4",
    "oomphinc/composer-installers-extender": "^2.0",
    "wikimedia/composer-merge-plugin": "^2.1",

    "drupal/admin_toolbar": "^3.4",
    "drupal/config_import_single": "^2.0",
    "gtsciences/gt_sso": "dev-main"
  },
  "require-dev": {
    "drupal/core-dev": "^10.2",
    "drupal/module_builder": "^4.0"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "allow-plugins": {
      "composer/installers": true,
      "cweagans/composer-patches": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "deployer/deployer": true,
      "drupal/*": true,
      "drush/*": true,
      "gtsciences/*": true,
      "oomphinc/composer-installers-extender": true,
      "phpstan/extension-installer": true,
      "wikimedia/composer-merge-plugin": true
    }
  },
  "enable-patching": true,
  "extra": {
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      }
    },
    "installer-paths": {
      "web/core": "type:drupal-core",
      "web/profiles/{$name}": "type:drupal-profile",
      "web/libraries/{$name}": [
        "type:drupal-library",
        "type:bower-asset",
        "type:npm-asset"
      ],
      "web/modules/contrib/{$name}": "type:drupal-module",
      "web/themes/contrib/{$name}": "type:drupal-theme",
      "drush/Commands/contrib/{$name}": "type:drupal-drush",
      "web/modules/custom/{$name}": "type:drupal-custom-module",
      "web/themes/custom/{$name}": "type:drupal-custom-theme"
    }
  }
}
